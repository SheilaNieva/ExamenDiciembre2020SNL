<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">


        <TextView
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvNombre"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvRaza" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"/>
        <TextView
                android:text="Raza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvRaza"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvNombre" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"/>
        <TextView
                android:text="Ki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvKi"
                app:layout_constraintEnd_toStartOf="@+id/tvAtaque"
                app:layout_constraintStart_toStartOf="@+id/tvNombre"
                app:layout_constraintTop_toBottomOf="@+id/tvNombre"
                app:layout_constraintBottom_toBottomOf="@+id/tvAtaque" app:layout_constraintHorizontal_bias="0.183"
                android:layout_marginTop="32dp" app:layout_constraintVertical_bias="1.0"/>
        <TextView
                android:text="Ataque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvAtaque"
                app:layout_constraintEnd_toEndOf="@+id/tvRaza"
                app:layout_constraintTop_toBottomOf="@+id/tvRaza"
                app:layout_constraintStart_toStartOf="@+id/tvRaza"
                android:layout_marginTop="20dp"/>
        <ImageView
                android:layout_width="81dp"
                android:layout_height="71dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/ivImagen"
                app:layout_constraintTop_toTopOf="@+id/tvNombre"
                app:layout_constraintBottom_toBottomOf="@+id/tvKi"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/tvNombre"
                android:layout_marginBottom="32dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>